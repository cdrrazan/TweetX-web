<% if pagination[:total] > 1 %>
  <nav class="mt-3 mb-3 d-flex justify-content-between align-items-center">

    <% if pagination[:prev] %>
      <a class="btn btn-outline-secondary btn-sm"
         href="<%= "#{pagination[:base_url]}?page=#{pagination[:prev]}&#{pagination[:query]}" %>">
        ← Previous
      </a>
    <% else %>
      <span></span>
    <% end %>

    <small class="text-muted">
      Page <%= pagination[:current] %> of <%= pagination[:total] %>
    </small>

    <% if pagination[:next] %>
      <a class="btn btn-outline-secondary btn-sm"
         href="<%= "#{pagination[:base_url]}?page=#{pagination[:next]}&#{pagination[:query]}" %>">
        Next →
      </a>
    <% else %>
      <span></span>
    <% end %>

  </nav>
<% end %>
