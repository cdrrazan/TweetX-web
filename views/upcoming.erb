<!--
  TweetX Upcoming Tweets View
  Displays all unpublished tweets with filtering and pagination
-->
<h3 class="mb-3">Upcoming | All Tweets</h3>

<!-- Filter form -->
<%= erb :'partials/_filter', locals: { path: '/upcoming', categories: @categories, params: @params } %>

<!-- Tweet table -->
<%= erb :'partials/_tweet_table', locals: { tweets: @upcoming } %>

<!-- Pagination -->
<%= erb :'partials/_pagination', locals: { pagination: @pagination } %>

<!-- Back to Dashboard button -->
<%= erb :'partials/_back_to_dashboard' %>
