<!--
  TweetX Categories Management View
  Interface for managing tweet categories (add, edit, delete)
-->
<div class="container py-4">
  <h2 class="mb-4 text-center">🗂 Manage Categories</h2>

  <!-- Add New Category Form -->
  <form method="post" class="row g-2 mb-4">
    <div class="col-12 col-md-10">
      <input type="text" name="category" class="form-control" placeholder="New category" required>
    </div>
    <div class="col-12 col-md-2">
      <button type="submit" class="btn btn-success w-100">➕ Add</button>
    </div>
  </form>

  <!-- List of Categories -->
  <ul class="list-group">
    <% @categories.each do |cat| %>
      <li class="list-group-item">
        <form method="post" action="/categories/edit/<%= cat.capitalize %>" class="row g-2 align-items-center">
          <div class="col-12 col-md-10">
            <input type="text" name="new" class="form-control" value="<%= cat %>" required>
          </div>
          <div class="col-6 col-md-1">
            <button class="btn btn-outline-primary btn-sm w-100">✏️ Update</button>
          </div>
          <div class="col-6 col-md-1">
            <form method="post" action="/categories/delete/<%= cat %>" onsubmit="return confirm('Are you sure?')">
              <button class="btn btn-outline-danger btn-sm w-100">🗑 Delete</button>
            </form>
          </div>
        </form>
      </li>
    <% end %>
  </ul>

  <!-- Back Button -->
  <div class="mt-4 text-center">
    <a href="/dashboard" class="btn btn-secondary">← Back to Dashboard</a>
  </div>
</div>
